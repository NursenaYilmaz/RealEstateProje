@model List<ResultProductDtos>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout2";
    int count = 0;
}



 <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
       <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Responsive Table</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">İlan Başlığı</th>
                                            <th scope="col">Şehir</th>
                                            <th scope="col">İlçe</th>
                                            <th scope="col">Kategori</th>
                                            <th scope="col">Fiyat</th>
                                            <th scope="col">Tür</th>
                                            <th scope="col">Sil</th>
                                            <th scope="col">Güncelle</th>
                                            <th scope="col">Sitede Gör</th>
                                            <th scope="col">Günün Fırsatı</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                         @foreach (var item in Model)
                                           {
                                               count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.productTitle</td>
                                                <td>@item.productCity</td>
                                                <td>@item.productDistrict</td>
                                                <td>@item.categoryName</td>
                                                <td>@item.productPrice</td>
                                                <td>@item.Type</td>
                                                <td><a href="/Product/DeleteProduct/@item.productId" class="btn btn-outline-danger">Sil</a></td>
                                                    <td><a href="/Product/UpdateProduct/@item.productId" class="btn btn-outline-success">Güncelle</a></td>
                                                    <td><a href="/Product/ProductDetail/@item.productId" class="btn btn-outline-info">Sitede Gör</a></td>
                                                    <td>
                                                        @if (item.DealOfTheDay == true)
                                                        {
                                                            <a href="/Product/ProductDealOfTheDayStatusChangeToFalse/@item.productId" class="btn btn-outline-warning">Pasif Yap</a>
                                                        }
                                                       @if (item.DealOfTheDay == false)
                                                        {
                                                            <a href="/Product/ProductDealOfTheDayStatusChangeToTrue/@item.productId" class="btn btn-outline-secondary">Aktif Yap</a>
                                                        }
                                                     </td>


                                            </tr>
                                            }
                                    </tbody>
                                </table>
                                 <a href="/Product/CreateProduct/" class="btn btn-outline-info">Yeni Kategori Girişi</a>
                            </div>
                        </div>
</div>
</div>