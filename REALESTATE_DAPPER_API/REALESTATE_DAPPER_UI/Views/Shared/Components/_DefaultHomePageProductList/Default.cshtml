@model List<REALESTATE_DAPPER_UI.Dtos.ProductDtos.ResultProductDtos>
  
<section
    class="locations-1" id="locations">
        <div class="locations py-5">
            <div class="container py-lg-5 py-md-4 py-2">
                <div class="heading text-center mx-auto">
                    <h3 class="title-big">Günün Favori İlanları</h3>
                </div>
                <div class="row pt-md-5 pt-4">
                    @foreach(var item in Model){
                    <div class="col-lg-4 col-md-6 mb-3">
                        <a asp-controller="Property" asp-action="PropertySingle" asp-route-slug="@item.SlugUrl" asp-route-id="@item.productId">
                            <div class="box16">
                                <div class="rentext-listing-category"><span>@item.Type</span><span>@item.categoryName</span></div>
                                    <img class="img-fluid" style="height:200px;width:700px" src="@item.ProductCoverImage" alt="">
                                <div class="box-content">
                                    <h3 class="title">$ @item.productPrice</h3>
                                    <span class="post">@item.ProductAddress @item.productDistrict-@item.productCity</span>
                                </div>
                            </div> 
                        </a>
                    </div>
                }
                </div>
            </div>
        </div>
    </section>
