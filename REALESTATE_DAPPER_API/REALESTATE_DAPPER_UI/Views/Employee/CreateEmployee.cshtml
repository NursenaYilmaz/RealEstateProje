@model CreateEmployeeDto
@{
    ViewData["Title"] = "CreateEmployee";
	Layout = "_Layout2";
}

<div class="container-fluid pt-4 px-4">
		<div class="row g-4">
			<div class="col-12">
				<div class="bg-light rounded h-100 p-4">
				  <h6 class="mb-4">Yeni Personel Ekleme Sayfası</h6>
					  <form method="post">
					   <label>Personel Adı</label>
					   <input type="text" asp-for="EmployeeName" class="form-control" />
						<br />
						<label>Personel Unvanı</label>
					   <input type="text" asp-for="EmployeeTitle" class="form-control" />
						<br />
						<label>Personel Mail Adresi</label>
					   <input type="email" asp-for="Mail" class="form-control" />
						<br />
						<label>Personel Telefonu</label>
					   <input type="tel" asp-for="PhoneNumber" class="form-control" />
						<br />
						<label>Personel Resmi</label>
					   <input type="text" asp-for="ImageUrl" class="form-control" />
						<br />
						
						<button class="btn btn-primary">Personeli Kaydet</button>
						</form>
		</div>
	</div>
</div>
</div>

